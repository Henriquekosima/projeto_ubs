    <script type="text/javascript" src="~/lib/mask/jquery.mask.min.js"></script>
    <script src="~/lib/Animated-Text-Underlines-jQuery-linkUnderline/jquery.linkunderanim.min.js"></script>

    <script src="~/lib/slick-1.8.1/slick/slick.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('.menu a, .conteudos a').on("click", function (event) {
                var link = $(event.target);

                if (!link.attr("href").startsWith('#')) {
                    return;
                }

                event.preventDefault();

                var section = $(link.attr("href"));
                $('html, body').animate({
                    scrollTop: section.offset().top - 30
                },600);
            });

            $('.vacinas .card').on('click', function (event) {
                event.preventDefault();

                // Elemento jQuery a partir do alvo do clique
                var card = $(event.target);
                // Busca elemento ".list-group" subindo a busca até o elemento
                // pai ".card" para garantir q encontraremos o elemento desejado
                // independente de onde ocorra o clique
                var listGroup = card.parents('.card').find('.card-body .list-group');

                // Se o elemento encontrado tiver a classe ".d-none", nós forçamos
                // o .hide() a partir do jQuery para evitar que o clique "pisque"
                // e removemos a classe ".d-none"
                if (listGroup.hasClass('d-none')) {
                    listGroup.hide().removeClass('d-none');
                }

                // Alterna a visibilidade do elemento com efeito visual de
                // slide up/down dependendo de seu estado
                listGroup.slideToggle();
            });

            $('.nav-tabs .nav-link').on('click', function (event) {
                event.preventDefault();

                // Elemento jQuery a partir do alvo do clique
                var tab = $(event.target);

                // Remove todas as classes "active" de abas ativas
                tab.parents('.nav-tabs').find('.active').removeClass('active');
                // Adiciona classe "active" no elemento que foi alvo do clique
                tab.addClass('active');

                // Força esconder todos os containers ".vacinas" para garantir
                // que mostremos apenas o elemento necessário
                $('.vacinas').hide();

                // Buscamos o container de vacinas via jQuery pelo id encontrado no
                // atributo href do elemento alvo do clique e mostramos a partir da
                // função ".show()"
                var vacinaId = tab.attr('href');
                $(vacinaId).removeClass('d-none').show();
            });

            $("#my-nav").linkUnderlineAnim({
                // animation speed in milliseconds
                "speed"       : 300,
                // hex color
                "color"       :"#1976d2",
                // thickness
                "thickness"     : 2,
                // distance in pixels from top
                "distance"      : 3
            });
        });
    </script>
</body>
</html>
